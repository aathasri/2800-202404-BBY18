<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Map Example</title>
    <!-- Include the Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
    
</head>
<body>
    <!-- Container for the map -->
    <div id="map" style="height: 400px;"></div>

    <!-- JavaScript code to initialize the map -->
    <script>
        // Initialize and add the map
        function initMap() {
            // The location of the center of the map
            var center = { lat: YOUR_LATITUDE, lng: YOUR_LONGITUDE };
            // The map, centered at the center coordinates
            var map = new google.maps.Map(document.getElementById("map"), {
                zoom: YOUR_ZOOM_LEVEL,
                center: center,
            });
            // Optionally, you can add markers or other features to the map here
        }
        
        // Call the initMap function when the page loads
        window.onload = function () {
            initMap();
        };
    </script>
</body>
</html>
