<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta tags and stylesheets -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-signin-client_id" content="700796163317-vjepkhc9d8fh6dt7nceq0u6l6cakdigl.apps.googleusercontent.com">
    <title>Asclepius</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-navbar {
            background-color: #0081A7 !important;
        }

        .navbar-brand{
            color: #ffffff !important;
        }
        .custom-navbar .nav-link,
        .custom-navbar{
            color: #000000 !important;
        }

        .custom-navbar .nav-link:hover,
        .custom-navbar .navbar-brand:hover {
            color: #0D4D60 !important;
            opacity: 0.8;
        }

        .custom-navbar .dropdown-menu {
            background-color: #ffffff !important;
        }

        .custom-navbar .dropdown-menu .dropdown-item {
            color: #000000 !important;
        }

        .custom-navbar .dropdown-menu .dropdown-item:hover {
            background-color: #000000 !important;
            color: #0081A7 !important; /* Adjusted to ensure visibility */
        }

        /* Adjust the image size */
        .navbar-brand img {
            width: 32px; /* Adjust as needed */
            height: 32px; /* Adjust as needed */
            margin-right: 10px; /* Add spacing between the image and text */
        }
        .drone-img {
            width: 250px; /* Adjust the width as needed */
            height: auto;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar custom-navbar fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" id="asclepiusBrand" href="#">
                <img src="/final_logo.png">
                Asclepius
            </a>
            <!-- Offcanvas toggle button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- Offcanvas menu -->
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <!-- Offcanvas content -->
                <div class="offcanvas-body">
                    <!-- Navbar links -->
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <!-- Your existing navbar links -->
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Bootstrap and Google platform scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    <script src="https://sdk.amazonaws.com/js/aws-sdk-2.953.0.min.js"></script>
    <!-- Custom JavaScript -->
    <script>
        // Function to animate the drone
        function flyDrone() {
            // Create a new image element for the drone
            const drone = document.createElement('img');
            drone.src = '/bcf3a371b9303c27752e1109e96a2fe6.gif'; // Replace 'drone.gif' with the path to your drone animation
            drone.classList.add('drone-img'); // Apply class to resize the image
            drone.style.position = 'absolute';
            drone.style.top = '50%';
            drone.style.left = '-100px'; // Start the drone off-screen
            document.body.appendChild(drone);

            // Animate the drone across the screen
            const animation = drone.animate([
                { left: '-100px' }, // Start position
                { left: 'calc(100% + 100px)' } // End position
            ], {
                duration: 5000, // Animation duration (5 seconds)
                easing: 'linear', // Linear easing
                iterations: 1, // Play the animation once
                fill: 'forwards' // Keep the final state of the animation
            });

            // Remove the drone from the DOM after the animation completes
            animation.onfinish = () => {
                drone.remove();
            };
        }

        // Event listener for clicks on the "Asclepius" navbar brand
        let clickCount = 0;
        document.getElementById('asclepiusBrand').addEventListener('click', () => {
            clickCount++;
            if (clickCount === 3) {
                flyDrone(); // Trigger the drone animation on the third click
                clickCount = 0; // Reset click count
            }
        });
    </script>