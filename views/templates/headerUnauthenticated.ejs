        <script>
            // Function to animate the drone
            function flyDrone() {
                // Create a new image element for the drone
                const drone = document.createElement('img');
                drone.src = '/bcf3a371b9303c27752e1109e96a2fe6.gif'; // Replace 'drone.gif' with the path to your drone animation
                drone.classList.add('drone-img'); // Apply class to resize the image
                drone.style.position = 'absolute';
                drone.style.top = '50%';
                drone.style.left = '-100px'; // Start the drone off-screen
                document.body.appendChild(drone);
    
                // Animate the drone across the screen
                const animation = drone.animate([
                    { left: '-100px' }, // Start position
                    { left: 'calc(100% + 100px)' } // End position
                ], {
                    duration: 5000, // Animation duration (5 seconds)
                    easing: 'linear', // Linear easing
                    iterations: 1, // Play the animation once
                    fill: 'forwards' // Keep the final state of the animation
                });
    
                // Remove the drone from the DOM after the animation completes
                animation.onfinish = () => {
                    drone.remove();
                };
            }
    
            // Event listener for clicks on the "Asclepius" navbar brand
            let clickCount = 0;
            document.getElementById('asclepiusBrand').addEventListener('click', () => {
                clickCount++;
                if (clickCount === 3) {
                    flyDrone(); // Trigger the drone animation on the third click
                    clickCount = 0; // Reset click count
                }
            });
            
        </script>
