
<%- include("templates/headerAuthenticated") %>
<!-- Link to location list csss -->
<head>
    <link rel="stylesheet" href="/droneList.css">
</head>
    <main>
        <div class="container">
            <h1>Drone List</h1>
            <table border="1">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th>Inventory</th>
                    </tr>
                </thead>
                <tbody>
                    <% drones.forEach(drone => { %>
                        <tr>
                            <td><%= drone.name %></td>
                            <td><%= drone.status %></td>
                            <td><%= drone.location %></td>
                            <td><%= drone.inventory %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="back-button-container">
            <a href="/addDrone" class="btn btn-primary">Add Drone</a>
            <button class="back-button" onclick="window.history.back()">Back</button>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
