<%- include('templates/header') %>
<head>
    <title>Drone List</title>
    <style>
        #x {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        table, th, td {
            border: 1px solid #ddd;
        }
        th, td {
            padding: 12px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        a {
            text-decoration: none;
            color: #3498db;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<br>
<br>
<body id="x">
    <div class="container">
        <h1>Drone List</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>id</th>

                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% drones.forEach(drone => { %>
                    <tr>
                        <td><%= drone.name %></td>
                        <td><%= drone.status %></td>
                        <td><%= drone.location %></td>
                        <td><%= drone.description %></td>
                        <td><%= drone._id %></td>

                        <td><a href="/droneDetails?id=<%= drone.id %>">View Details</a></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

<%- include('templates/footer') %>
